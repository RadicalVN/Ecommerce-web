@model OrganicWeb.Models.Role

@{
    ViewData["Title"] = "Tạo mới Role";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Quản lý quyền truy cập</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
        </nav>
    </div>
</div>
<div class="col-md-6">
    <form asp-action="Create">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.RoleName)</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="@Model.RoleName" placeholder="@Html.DisplayNameFor(model => model.RoleName)">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Description)</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="@Model.Description" placeholder="@Html.DisplayNameFor(model => model.Description)">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">Status</div>
            <div class="col-sm-10">
                <div class="checkbox">
                    <input type="checkbox" id="chkStatusAccount">
                    <label for="chkStatusAccount">Active</label>
                </div>
            </div>
        </div>
        <div class="col-lg-16">
            <button class="btn btn-primary">
                <i class="anticon anticon-save"></i>
                <span>Tạo mới</span>
            </button>
        </div>
    </form>
</div>